<module>
	<!-- inherit javax.validation -->
	<inherits name='javax.validation.Validation'/>
	
	<!-- Generate reflectors, which (in turn) generates constraint descriptors -->
	<generate-with class="com.em.validation.rebind.generator.gwt.GwtReflectorGenerator">
	      <when-type-assignable class="com.em.validation.client.reflector.IReflector" />
	</generate-with>
	
	<!-- Scan the classpath and build the reflector factory -->
	<generate-with class="com.em.validation.rebind.generator.gwt.GwtReflectorFactoryGenerator">
	      <when-type-assignable class="com.em.validation.client.reflector.IReflectorFactory" />
	</generate-with>

	<!-- Super Source Emulation -->
 	<super-source path="emul" />
</module>